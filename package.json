{
  "name": "the-black-captain",
  "version": "2.0.0",
  "description": "The many travels of the Black Captain - A journey of healing through words",
  "main": "src/index.js",
  "scripts": {
    "build": "node src/index.js",
    "build:legacy": "node build.js",
    "generate:images": "node generate-images.js",
    "dev": "node src/index.js && pnpm wrangler pages dev public",
    "deploy": "./deploy.sh",
    "bootstrap": "./bootstrap.sh",
    "init": "./init-cloudflare.sh",
    "domain:add": "./add-domain-api.sh",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:e2e": "playwright test",
    "test:deployment": "node tests/e2e/deployment.test.js",
    "test:story": "node tests/e2e/story.test.js",
    "test:all": "pnpm test && pnpm test:e2e"
  },
  "keywords": [
    "blog",
    "travel",
    "writing",
    "cloudflare",
    "static-site-generator"
  ],
  "author": "The Black Captain",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@vitest/coverage-v8": "^3.2.4",
    "playwright": "^1.56.1",
    "vitest": "^3.2.4",
    "wrangler": "^4.49.0"
  },
  "dependencies": {
    "@cloudflare/pages-plugin-vercel-og": "^0.1.2",
    "@types/react": "^19.2.7",
    "react": "^19.2.0",
    "typescript": "^5.9.3"
  }
}
